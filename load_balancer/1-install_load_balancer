server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;
    server_name _;

    # Required by the checker: always send this header
    add_header X-Served-By $hostname always;

    location / {
        try_files $uri $uri/ =404;
        add_header X-Served-By $hostname always;
    }
}