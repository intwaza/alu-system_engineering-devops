#!/usr/bin/env bash
# Install and configure HAProxy to load balance web-01 and web-02 with roundrobin

set -euo pipefail
# shellcheck disable=SC2154

export DEBIAN_FRONTEND=noninteractive

sudo apt-get update -y
sudo apt-get install -y haproxy

# Ensure service can be managed via init script defaults
# On Ubuntu 16.04 / Debian this flag is read by the init script
if [ -f /etc/default/haproxy ]; then
  sudo sed -i 's/^ENABLED=.*/ENABLED=1/' /etc/default/haproxy || echo "ENABLED=1" | sudo tee -a /etc/default/haproxy >/dev/null
else
  echo "ENABLED=1" | sudo tee /etc/default/haproxy >/dev/null
fi

# Write a minimal haproxy.cfg with roundrobin to the two backends
sudo tee /etc/haproxy/haproxy.cfg >/dev/null <<'EOF'
global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    option  http-server-close
    option  forwardfor
    timeout connect 5s
    timeout client  50s
    timeout server  50s
    retries 3

frontend http-in
    bind *:80
    default_backend web-backend

backend web-backend
    balance roundrobin
    option httpchk GET / # health check
    http-check expect rstatus (2|3)[0-9][0-9]
    server web-01 3.83.224.222:80 check
    server web-02 3.88.188.216:80 check
EOF

sudo haproxy -c -f /etc/haproxy/haproxy.cfg
sudo systemctl enable haproxy
sudo systemctl restart haproxy
