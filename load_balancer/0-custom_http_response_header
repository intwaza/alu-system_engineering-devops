#!/usr/bin/env bash
# Configure Nginx so every HTTP response includes X-Served-By:$hostname

set -e
export DEBIAN_FRONTEND=noninteractive

# Install nginx
apt-get update -y
apt-get install -y nginx

# Simple index to ensure / returns 200
printf 'Hello from %s\n' "$(hostname)" > /var/www/html/index.html

# Write a clean default site with the header (avoid fragile sed on unknown images)
cat >/etc/nginx/sites-available/default <<'NG'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;
    server_name _;

    # Always return the identifying header (even on 301/404)
    add_header X-Served-By $hostname always;

    location / {
        try_files $uri $uri/ =404;
        add_header X-Served-By $hostname always;
    }
}
NG

# Validate & restart using whatever init system is present
nginx -t
if command -v systemctl >/dev/null 2>&1; then
  systemctl enable nginx || true
  systemctl restart nginx
else
  service nginx start || true
  service nginx restart
fi

exit 0
