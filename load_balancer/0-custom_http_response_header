#!/usr/bin/env bash
# Script to configure Nginx with custom HTTP response header
# shellcheck disable=SC2154

# Update package list
apt-get update -y

# Install Nginx
apt-get install nginx -y

# Get the hostname of the server
HOSTNAME=$(hostname)

# Create a custom HTML page with "Holberton School"
echo "Holberton School for the win!" > /var/www/html/index.html

# Create custom 404 error page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Add custom header to Nginx configuration
# This adds the X-Served-By header with the server's hostname
sed -i "/http {/a \    add_header X-Served-By $HOSTNAME;" /etc/nginx/nginx.conf

# Configure the redirect in Nginx default site
sed -i '/server_name _;/a \    location /redirect_me {\n        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n    }' /etc/nginx/sites-available/default

# Configure custom 404 page in Nginx
sed -i '/server_name _;/a \    error_page 404 /404.html;\n    location = /404.html {\n        internal;\n    }' /etc/nginx/sites-available/default

# Start Nginx service
service nginx start

# Restart Nginx to apply changes
service nginx restart
